<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartMobileWMS.Views.ConnectionPage"
             Title="Connection String">
    <ContentPage.Content>
        <Grid>
            <StackLayout Margin="0,120,0,0">
                <Frame HorizontalOptions="FillAndExpand" VerticalOptions="Center" HasShadow="True"  Margin="10">
                    <StackLayout>
                        <Label Text="Connection String"/>
                        <Entry Text="{Binding UserID}" Placeholder="User ID" ClearButtonVisibility="WhileEditing"/>
                        <Entry Text="{Binding Password}" Placeholder="Password" ClearButtonVisibility="WhileEditing"/>
                        <Entry Text="{Binding DataSource}" Placeholder="Data Source" ClearButtonVisibility="WhileEditing"/>
                        <Entry Text="{Binding Catalog}" Placeholder="Initial Catalog" ClearButtonVisibility="WhileEditing"/>
                        <Button Text="Αποθήκευση" CornerRadius="10" Command="{Binding SaveCommand}" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
            
            
        </Grid>
    </ContentPage.Content>
</ContentPage>